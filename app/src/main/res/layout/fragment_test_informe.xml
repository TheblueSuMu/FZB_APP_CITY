<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".all.fragment.TestInformeFragment">

    <RelativeLayout
        android:id="@+id/infor_rl_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_size_5">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:src="@mipmap/tongzhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_75"
            android:layout_marginTop="20dp"
            android:text="通知消息"
            android:textColor="#ff111111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/infor_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff999999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_size_15"
            android:layout_marginTop="@dimen/dp_size_20"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_75"
            android:layout_marginTop="@dimen/dp_size_45"
            android:layout_marginRight="@dimen/dp_size_15">

            <TextView
                android:id="@+id/infor_message_1"
                android:layout_toLeftOf="@id/infor_num_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:text=""
                android:gravity="left"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/infor_num_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/item_unread"
                android:text="1"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:id="@+id/infor_rl_2"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:src="@mipmap/hongbao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_75"
            android:layout_marginTop="20dp"
            android:text="红包消息"
            android:textColor="#ff111111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/infor_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff999999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_size_15"
            android:layout_marginTop="@dimen/dp_size_20"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_75"
            android:layout_marginTop="@dimen/dp_size_45"
            android:layout_marginRight="@dimen/dp_size_15">

            <TextView
                android:id="@+id/infor_message_2"
                android:layout_toLeftOf="@id/infor_num_2"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/infor_num_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/item_unread"
                android:text="1"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:id="@+id/infor_rl_3"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:src="@mipmap/zuji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_75"
            android:layout_marginTop="20dp"
            android:text="足迹信息"
            android:textColor="#ff111111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/infor_time_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff999999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_size_15"
            android:layout_marginTop="@dimen/dp_size_20"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_75"
            android:layout_marginTop="@dimen/dp_size_45"
            android:layout_marginRight="@dimen/dp_size_15">

            <TextView
                android:id="@+id/infor_message_3"
                android:layout_toLeftOf="@id/infor_num_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_size_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:text=""
                android:gravity="left"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/infor_num_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/item_unread"
                android:text="1"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>