<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@mipmap/adapter_special_offer_background_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/adapter_special_offer_tv1"
            android:layout_marginTop="36.5dp"
            android:layout_marginLeft="37dp"
            android:text="￥"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/adapter_special_offer_price"
            android:layout_toRightOf="@id/adapter_special_offer_tv1"
            android:layout_marginTop="20dp"
            android:text="5"
            android:textSize="34sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/adapter_special_offer_discount_coupon"
            android:layout_below="@id/adapter_special_offer_tv1"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="10dp"
            android:text="带看券"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/adapter_special_offer_name"
            android:layout_marginTop="14.5dp"
            android:layout_marginLeft="10.5dp"
            android:text="项目名称手机号多少..."
            android:textSize="14sp"
            android:textColor="#111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/adapter_special_offer_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10.5dp"
            android:text="有效成交即可领取"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/adapter_special_offer_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.5dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/adapter_special_offer_button_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/adapter_special_offer_time"
            android:layout_marginLeft="10.5dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
            android:text="2019.10.10-2019.11.10有效"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</LinearLayout>