<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/adapter_get_the_record_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/adapter_get_the_record_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10.5dp"
            app:riv_oval="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/adapter_get_the_record_title"
            android:layout_toRightOf="@id/adapter_get_the_record_image"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="15.5dp"
            android:layout_toRightOf="@id/adapter_get_the_record_image"
            android:layout_below="@id/adapter_get_the_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="已领："
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/adapter_get_the_record_price"
                android:text="25"
                android:textSize="18sp"
                android:textColor="#F4933D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="7.5dp"
                android:text="元"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/adapter_get_the_record_time"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="2018-03-03 13:56:00"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_below="@id/adapter_get_the_record_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10.5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_get_the_record_icon1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/adapter_get_the_record_icon2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24.5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>


            <ImageView
                android:id="@+id/adapter_get_the_record_icon3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="39dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>


            <ImageView
                android:id="@+id/adapter_get_the_record_icon4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="53dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:background="#EEEEEE"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/adapter_get_the_record_name"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="9.5dp"
        android:text="项目名称展示不下.."
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>