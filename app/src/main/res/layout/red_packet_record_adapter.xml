<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/red_packet_record_adapter_background"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/red_packet_record_adapter_content"
        android:text="已领取4/10个,共20/50元"
        android:textSize="15sp"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        android:layout_width="225dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/red_packet_record_adapter_time"
        android:text="有效期至：08.05 15:00 - 08.06:14:29"
        android:textSize="12sp"
        android:textColor="#999999"
        android:textStyle="bold"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp"
        android:layout_below="@id/red_packet_record_adapter_content"
        android:layout_width="225dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/red_packet_record_adapter_button"
        android:text="继续推广"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/red_packet_record_adapter_button_background"
        android:layout_marginTop="33dp"
        android:button="@null"
        android:layout_width="60dp"
        android:layout_height="25dp"/>

</RelativeLayout>