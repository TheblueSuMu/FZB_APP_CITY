<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/my_brokerage">
        <RelativeLayout
            android:id="@+id/inform_the_details_return"
            android:layout_width="50dp"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="33dp"
                android:src="@mipmap/return2" />

        </RelativeLayout>
        <TextView
            android:id="@+id/inform_the_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/inform_the_details_eliminate"
            android:layout_width="@dimen/dp_size_21"
            android:layout_height="@dimen/dp_size_21"
            android:src="@mipmap/eliminate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_size_15"
            android:layout_marginTop="@dimen/dp_size_30"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inform_the_details_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>