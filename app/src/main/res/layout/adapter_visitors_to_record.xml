<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/adapter_visitors_to_record_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:riv_oval="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/adapter_visitors_to_record_visitor_name"
        android:layout_toRightOf="@id/adapter_visitors_to_record_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="21dp"
        android:text="是谁啊"
        android:textSize="15sp"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/adapter_visitors_to_record_gender"
        android:layout_toRightOf="@id/adapter_visitors_to_record_visitor_name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="5.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/adapter_visitors_to_record_address"
        android:layout_toRightOf="@id/adapter_visitors_to_record_gender"
        android:layout_marginLeft="5.5dp"
        android:layout_marginTop="24dp"
        android:text="吉林"
        android:textSize="12sp"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/adapter_visitors_to_record_hint"
        android:layout_below="@id/adapter_visitors_to_record_visitor_name"
        android:layout_toRightOf="@id/adapter_visitors_to_record_image"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9.5dp"
        android:text="通过微信在小程序中浏览"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/adapter_visitors_to_record_chat"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20.5dp"
        android:src="@mipmap/adapter_visitors_to_record_chat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/adapter_visitors_to_record_project"
        android:layout_below="@id/adapter_visitors_to_record_hint"
        android:layout_toRightOf="@id/adapter_visitors_to_record_image"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10.5dp"
        android:background="#F3F3F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapter_visitors_to_record_project_image"
            android:layout_marginTop="5.5dp"
            android:layout_marginBottom="5.5dp"
            android:layout_marginLeft="6dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/adapter_visitors_to_record_project_name"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="项目名称"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/adapter_visitors_to_record_time"
        android:layout_below="@id/adapter_visitors_to_record_project"
        android:layout_toRightOf="@id/adapter_visitors_to_record_image"
        android:layout_marginLeft="11.5dp"
        android:layout_marginTop="5.5dp"
        android:layout_marginRight="10dp"
        android:text="访问时间: 08-05 12:00 30秒. wifi. phone  浏览一次项目"
        android:textSize="10sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_below="@id/adapter_visitors_to_record_time"
        android:background="#EEEEEE"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</RelativeLayout>