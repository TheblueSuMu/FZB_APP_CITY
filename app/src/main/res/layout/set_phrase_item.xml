<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/economic_circle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/set_phrase_item_text"
        android:layout_width="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/set_phrase_item_bianji"
            android:layout_width="20dp"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:src="@mipmap/bianji"/>
        <ImageView
            android:id="@+id/set_phrase_item_shanchu"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:src="@mipmap/shanchu"/>
    </LinearLayout>

</LinearLayout>