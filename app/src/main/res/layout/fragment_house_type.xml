<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xcy.fzbcity.all.fragment.HouseTypeFragment">

    <CheckBox
        android:id="@+id/house_type_0"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="不限"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>


    <CheckBox
        android:id="@+id/house_type_1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="一室"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>

    <CheckBox
        android:id="@+id/house_type_2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="二室"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>

    <CheckBox
        android:id="@+id/house_type_3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="三室"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>


    <CheckBox
        android:id="@+id/house_type_4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="四室"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>


    <CheckBox
        android:id="@+id/house_type_5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="五室"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>

    <CheckBox
        android:id="@+id/house_type_6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="五室以上"
        android:textColor="@drawable/text_checked"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_checked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"/>

    <LinearLayout
        android:background="@drawable/linearlayout_back"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/house_reset"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/reset"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/house_ensure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/put_in"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>