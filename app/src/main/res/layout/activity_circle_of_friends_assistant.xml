<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/circle_of_friends_assistant_Relative_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_brokerage">

        <RelativeLayout
            android:id="@+id/circle_of_friends_assistant_return"
            android:layout_width="50dp"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:src="@mipmap/return2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="34dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/circle_of_friends_assistant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="朋友圈助手"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_below="@id/circle_of_friends_assistant_title"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/circle_of_friends_assistant_illustration_linear"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/circle_of_friends_assistant_illustration"
                    android:text="朋友圈配图"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/circle_of_friends_assistant_illustration_view"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9.5dp"
                    android:background="#FFFFFF"
                    android:layout_width="57.5dp"
                    android:layout_height="2.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/circle_of_friends_assistant_caption_linear"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/circle_of_friends_assistant_caption"
                    android:text="朋友圈配文"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/circle_of_friends_assistant_caption_view"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9.5dp"
                    android:background="#FFFFFF"
                    android:layout_width="57.5dp"
                    android:layout_height="2.5dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/circle_of_friends_assistant_framelayout"
        android:layout_below="@id/circle_of_friends_assistant_Relative_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>