<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_location_rl"
    android:layout_width="240dp"
    android:layout_height="150dp">

    <com.amap.api.maps.MapView
        android:layout_below="@id/message_item_location_ll"
        android:id="@+id/message_item_location_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="0dip" />

    <LinearLayout
        android:id="@+id/message_item_location_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/message_item_location_address_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="1dip"
            android:paddingLeft="15dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_item_location_address_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="1dip"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

