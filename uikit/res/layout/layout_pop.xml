<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/bt_l_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#111111">
        <Button
            android:id="@+id/bt_l"
            android:layout_width="@dimen/dp_size_62"
            android:layout_height="@dimen/dp_36"
            android:text="转发"
            android:textSize="16sp"
            android:background="#111111"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#898989"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_size_5"
            android:layout_marginBottom="@dimen/dp_size_5"/>
        <Button
            android:id="@+id/bt_r"
            android:layout_width="@dimen/dp_size_62"
            android:layout_height="@dimen/dp_36"
            android:textSize="16sp"
            android:background="#111111"
            android:textColor="#FFFFFF"
            android:text="复制" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#898989"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_size_5"
            android:layout_marginBottom="@dimen/dp_size_5"/>
        <Button
            android:id="@+id/bt_s"
            android:layout_width="@dimen/dp_size_62"
            android:layout_height="@dimen/dp_36"
            android:textSize="16sp"
            android:background="#111111"
            android:textColor="#FFFFFF"
            android:text="删除" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_size_20"
        android:layout_height="15dp"
        android:src="@drawable/down_icon"
        android:scaleType="fitXY"
        android:layout_below="@id/bt_l_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"/>

</RelativeLayout>